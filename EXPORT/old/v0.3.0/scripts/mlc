#!/usr/bin/env bash
# mlc - MatLabC++ Short Alias Wrapper (Linux/macOS)
# Forwards all arguments to the main matlabcpp executable
# Part of MatLabC++ v0.3.0 command-line integration
# This is an OPTIONAL alias - only installed if user requests it

set -euo pipefail

# Get the directory where this script lives
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Path to executable
MATLABCPP_BIN="${SCRIPT_DIR}/matlabcpp"

# Check if executable exists
if [[ ! -x "$MATLABCPP_BIN" ]]; then
    echo "Error: MatLabC++ executable not found or not executable: $MATLABCPP_BIN" >&2
    exit 1
fi

# Forward all arguments and preserve exit code
exec "$MATLABCPP_BIN" "$@"
